# MDI Backend Environment Configuration
# Copy this to .env and update values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mdi_db

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application
DEBUG=true
LOG_LEVEL=INFO

# Debt Calculation Parameters
DEFAULT_DECAY_RATE=0.02
MAX_DEBT_MULTIPLIER=10.0

# External APIs (optional)
MAPBOX_TOKEN=your_mapbox_token_here
OPENAI_API_KEY=your_openai_key_here

# CORS Origins (comma-separated for production)
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
